# HiveMind local dev environment
# Copy this file and fill in your values — never commit secrets

# ── AWS / Bedrock ──────────────────────────────────────────────────────────
# Option 1: env vars (auth_mode = "env")
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Option 2: named profile (auth_mode = "profile")
# AWS_PROFILE=default

# Region — used as fallback if not set in the UI
AWS_DEFAULT_REGION=us-east-1

# ── Server ─────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000

# ── Agent config ───────────────────────────────────────────────────────────
DEPLOYMENT_STATE_DIR=~/.hivemind/deployments
REPO_CLONE_DIR=~/.hivemind/analyzed_repos
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2
AGENT_TIMEOUT_SECONDS=300
